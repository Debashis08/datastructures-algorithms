{
  "version": 3,

  "configurePresets": [
    {
      "name": "x64-debug",
      "displayName": "MinGW - Debug (Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/artifact/build/${presetName}",
      "installDir": "${sourceDir}/artifact/install/${presetName}",

      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64"
      },

      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows",
        "CMAKE_C_COMPILER": "C:/mingw64/bin/gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/mingw64/bin/g++.exe",
        "CMAKE_MAKE_PROGRAM": "C:/mingw64/bin/ninja.exe",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "x64-release",
      "displayName": "MinGW - Release (Ninja)",
      "inherits": "x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "build",
      "configurePreset": "x64-debug"
    },
    {
      "name": "rebuild",
      "configurePreset": "x64-debug",
      "cleanFirst": true
    },
    {
      "name": "install",
      "configurePreset": "x64-debug"
    }
  ],

  "testPresets": [
    {
      "name": "test",
      "configurePreset": "x64-debug"
    }
  ]
}
